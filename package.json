{
  "name": "expense",
  "version": "0.1.0",
  "private": true,
  "description": "Single-tenant expense and sales management desktop app",
  "author": "",
  "main": "main.js",
  "build": {
    "appId": "com.expense.sales",
    "productName": "Expense & Sales Manager",
    "icon": "build/icon.ico",
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "standalone"
      },
      {
        "from": "public/logo.png",
        "to": "logo.png"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "createDesktopShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    }
  },
  "scripts": {
    "dev": "next dev -p 3100",
    "build": "next build",
    "start": "next start -p 3100",
    "lint": "next lint",
    "seed": "node --env-file=.env scripts/seed.mjs",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3100 && electron .\"",
    "electron:start": "electron .",
    "pack": "npm run build && node scripts/copy-standalone-assets.cjs && node scripts/build-icon.cjs && npx electron-builder --win",
    "dist": "npm run build && node scripts/copy-standalone-assets.cjs && node scripts/build-icon.cjs && npx electron-builder --win --publish never"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "exceljs": "^4.4.0",
    "jose": "^6.1.3",
    "mongodb": "^6.10.0",
    "mongoose": "^8.8.0",
    "next": "16.1.6",
    "pdf-lib": "^1.17.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^33.4.11",
    "electron-builder": "^25.0.0",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.16.0",
    "eslint-config-next": "16.1.6",
    "png-to-ico": "^3.0.1",
    "tailwindcss": "^4",
    "wait-on": "^9.0.4"
  }
}
